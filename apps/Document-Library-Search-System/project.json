{
  "name": "Document-Library-Search-System",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/Document-Library-Search-System/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/Document-Library-Search-System",
        "index": "apps/Document-Library-Search-System/src/index.html",
        "main": "apps/Document-Library-Search-System/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/Document-Library-Search-System/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/Document-Library-Search-System/public"
          }
        ],
        "styles": [
          "apps/Document-Library-Search-System/src/custom-theme.scss",
          "apps/Document-Library-Search-System/src/styles.css"
        ]
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/document-library-search-system/src/environments/environment.ts",
              "with": "apps/document-library-search-system/src/environments/environment.prod.ts"
            }
          ],
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "Document-Library-Search-System:build:production"
        },
        "development": {
          "buildTarget": "Document-Library-Search-System:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "Document-Library-Search-System:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/Document-Library-Search-System/jest.config.ts"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "Document-Library-Search-System:build",
        "port": 4200,
        "spa": true
      }
    }
  }
}